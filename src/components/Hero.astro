---
import { Icon } from "astro-icon/components";
import type { HeroProps } from "../types";

type Props = HeroProps;

const { hero } = Astro.props;
const {
  headline,
  subheadline,
  emotionalHook,
  primaryCta,
  secondaryCta,
  visualPath,
  visualAlt,
} = hero;
---

<header
  class="relative overflow-hidden bg-gradient-to-br from-primary-50 via-white to-primary-100 dark:from-neutral-900 dark:via-neutral-800 dark:to-neutral-900 h-screen"
  role="banner"
>
  <div class="container-section py-20 sm:py-28 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left">
        <!-- Emotional Hook Badge -->
        <p
          class="inline-flex items-center px-4 py-1.5 mb-6 text-sm font-medium text-primary-700 bg-primary-100 dark:text-primary-300 dark:bg-primary-900/50 rounded-full"
        >
          <Icon name="lucide:check-circle" class="w-4 h-4 mr-2" />
          {emotionalHook}
        </p>

        <!-- Headline -->
        <h1
          class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-neutral-900 dark:text-white leading-tight mb-6"
        >
          {headline}
        </h1>

        <!-- Subheadline (Emotional) -->
        <p
          class="text-lg sm:text-xl text-neutral-600 dark:text-neutral-300 leading-relaxed mb-8 max-w-2xl lg:max-w-none"
        >
          {subheadline}
        </p>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row items-center lg:items-start justify-center lg:justify-start gap-4 mb-6"
          role="group"
          aria-label="Call to action buttons"
        >
          <div class="flex flex-col items-center lg:items-start">
            <a
              href="#cta"
              class="btn-primary w-full sm:w-auto"
              aria-label={`${primaryCta.text} - ${primaryCta.subtext}`}
            >
              {primaryCta.text}
              <Icon name="lucide:arrow-right" class="w-5 h-5 ml-2" />
            </a>
            <span class="text-sm text-neutral-500 dark:text-neutral-400 mt-2"
              >{primaryCta.subtext}</span
            >
          </div>

          {
            secondaryCta && (
              <div class="flex flex-col items-center lg:items-start">
                <a
                  href="#solution"
                  class="btn-secondary w-full sm:w-auto"
                  aria-label={`${secondaryCta.text} - ${secondaryCta.subtext}`}
                >
                  <Icon name="lucide:play-circle" class="w-5 h-5 mr-2" />
                  {secondaryCta.text}
                </a>
              </div>
            )
          }
        </div>
      </div>

      <!-- Visual Placeholder -->
      <div class="relative hidden lg:block">
        <div
          class="relative rounded-2xl overflow-hidden shadow-lg aspect-[4/3]"
        >
          {
            visualPath ? (
              <img
                src={visualPath}
                alt={visualAlt || "Product preview"}
                class="w-full h-full object-cover"
                loading="eager"
              />
            ) : (
              <div class="bg-neutral-200 dark:bg-neutral-700 w-full h-full flex flex-col items-center justify-center">
                <Icon
                  name="lucide:image"
                  class="w-16 h-16 text-neutral-400 dark:text-neutral-500 mb-3"
                />
                <span class="text-neutral-500 dark:text-neutral-400 text-sm font-medium">
                  No Image Uploaded
                </span>
                <span class="text-neutral-400 dark:text-neutral-500 text-xs mt-1">
                  Add visualPath in site.json
                </span>
              </div>
            )
          }
        </div>
        <!-- Decorative elements -->
        <div
          class="absolute -bottom-4 -right-4 w-24 h-24 bg-primary-200 dark:bg-primary-800 rounded-full blur-2xl opacity-60"
          aria-hidden="true"
        >
        </div>
        <div
          class="absolute -top-4 -left-4 w-32 h-32 bg-primary-300 dark:bg-primary-700 rounded-full blur-2xl opacity-40"
          aria-hidden="true"
        >
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative gradient blobs -->
  <div
    class="absolute top-0 right-0 -translate-y-1/4 translate-x-1/4 w-96 h-96 bg-primary-200 dark:bg-primary-800 rounded-full blur-3xl opacity-30 pointer-events-none"
    aria-hidden="true"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 translate-y-1/4 -translate-x-1/4 w-96 h-96 bg-primary-300 dark:bg-primary-700 rounded-full blur-3xl opacity-20 pointer-events-none"
    aria-hidden="true"
  >
  </div>
</header>
